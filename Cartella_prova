from numpy import mean

studenti={

"Mario":{"Matematica":6,"Scienze":7,"Italiano":6,"Inglese":4},

"Giovanni":{"Matematica":4,"Scienze":5,"Italiano":6,"Inglese":7},

"Paola":{"Matematica":9,"Scienze":8,"Italiano":6,"Inglese":8}
}

voti_mario=list(studenti["Mario"].values())
voti_giovanni=list(studenti["Giovanni"].values())
voti_paola=list(studenti["Paola"].values())

print(str(mean(voti_mario)))
print(str(mean(voti_giovanni)))
print(str(mean(voti_paola)))





 


